    "version": "0.2.0",
    "configurations": [    
        {
            "name": "Run {{cookiecutter.app.name}}",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/{{cookiecutter.app.name}}/main.go",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": [],
            "showLog": true,
        },
        {
            "name": "Debug {{cookiecutter.app.name}} in verbose",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/{{cookiecutter.app.name}}/main.go",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": ["-debug", "-verbose"],
            "showLog": true,
        },
        {
            "name": "Run {{cookiecutter.app.name}} in verbose",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/cmd/{{cookiecutter.app.name}}/main.go",
            "cwd": "${workspaceFolder}",
            "env": {},
            "args": ["-verbose"],
            "showLog": true,
        }
    ]
}